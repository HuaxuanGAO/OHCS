<h1>New Appointment</h1>
<h2>Step 3: Choose a day to see the available slots</h2>

<div id="Schedule-calendar">
<%= month_calendar(events: @schedules) do |date, schedules| %>
  <%= date %>
  <% schedules.each do |schedule| %>
    <div>
      <%= link_to "Schedule on #{schedule.start_time} - #{schedule.end_time}", select_slot_path(:schedule_id => schedule.id, :doc_id => @id), class: "link" %>
    </div>
  <% end %>
<% end %>
</div>

<%= link_to 'Back', select_doctor_path %>