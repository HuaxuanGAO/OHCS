<p id="notice"><%= notice %></p>

<h1>Appointments</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Start time</th>
      <th>End time</th>
      <% if current_user.role == "patient" %>
        <th>Doctor</th>
      <% elsif current_user.role == "doctor" %>
        <th>Patient</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.name %></td>
        <td><%= Slot.find(appointment.slot_id).start_time %></td>
        <td><%= Slot.find(appointment.slot_id).end_time %></td>
        <% if current_user.role == "patient" %>
          <td><%= appointment.doctor.user.first_name + " " + appointment.doctor.user.last_name %></td>
        <% elsif current_user.role == "doctor" %>
          <td><%= appointment.patient.user.first_name + " " + appointment.patient.user.last_name %></td>
        <% end %>
        <td><%= link_to 'Enter Chat Room', appointment.room %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.role == "patient" %>
  <%= link_to 'New Appointment', select_department_path, :class => 'btn btn-primary' %>
<% end %>
<%= link_to 'Calendar View', "appointments/#{current_user.id}/calendar", :class => 'btn btn-primary' %>
