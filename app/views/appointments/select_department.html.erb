<h1>New Appointment</h1>
<h2>Step 1: Choose the department you wish to vist</h2>

<%= form_with url: "/appointment/doctors", method: :get do |form| %>
    <div class="form-inputs">
    <%= form.select :department, ['General outpatient','Internal','Surgery','Neurology',"E.N.T.","Orthopedic"] %>
    </div>
    <div class="btn btn-primary col-1">
    <%= form.submit "Next" %>
    </div>
<% end %>

<%= link_to 'Back', appointments_path %>