<div class="max-w-lg my-10 m-auto">
  <div class="p-10 bg-white border border-grey-light rounded">

    <div class="flex flex-wrap justify-between items-center mb-5">
      <h1><%= "Schedule on #{@schedule.start_time}" %></h1>
      <%= link_to "Remove Schedule", schedule_path(@schedule), method: :delete, data: { confirm: "Are you sure you want to cancel? "}, class: "btn btn-destroy" %>
    </div>

    <div class="border p-6 bg-grey-lighter mb-5 flex items-center justify-between">
      <p class="border-2 py-3 px-4 border-indigo rounded-full text-sm text-indigo">
        Start time: <span class="font-bold"><%= readable_time(@schedule.start_time) %></span>
      </p>
      <div class="border-t-2 border-indigo-light border-dashed h-1 flex-1"></div>
      <p class="border-2 py-3 px-4 border-indigo rounded-full text-sm text-indigo">
        End time: <span class="font-bold"><%= readable_time(@schedule.end_time) %></span>
      </p>
    </div>